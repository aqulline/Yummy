#:import sm kivy.uix.screenmanager
ScreenManager:
    id:manager
    transition:sm.FadeTransition(duration=.2)

    MDScreen:
        name:"fun"
        FitImage:
            source:"bgimages/icons/yummy-plain.jpg"

    MDScreen:
        id: test
        name:"one"
        on_enter:
            app.front_shop_faster()
        FitImage:
            source:"bgimages/Home1.jpg"
        MDSpinner:
            size_hint: None, None
            size: dp(46), dp(46)
            pos_hint: {'center_x': .5, 'center_y': .5}
            active: app.spin_active
        MDLabel:
            text:app.loading
            halign:"center"
            bold:True
            theme_text_color: "Custom"
            font_style:"H6"
            size:app.size_x/1.5, "95dp"
            font_name:"bgimages/fonts/GillSans/GillSans Condensed Bold.otf"
            theme_text_color: "Custom"
            text_color:78/255, 82/255, 84/255, 1
            size_hint:None, None
            pos_hint: {'center_x': .5, 'center_y': .4}

        MDBoxLayout:
            orientation:"vertical"
            spacing:"10dp"
            MDLabel:
                text:""
                size_hint:None, None
                size: app.size_x/4, "10dp"
                font_name:"bgimages/fonts/GillSans/GillSans Condensed Bold.otf"
            MDIconButton:
                icon: "refresh"
                id:refresh_me
                pos_hint: {"center_x": .9, "center_y": .8}
                custom_color: 40/255, 123/255, 222/255, 1
                on_release:
                    app.refresh_front()
            MDCard:
                md_bg_color: self.theme_cls.primary_color
                size_hint: None, None
                border_radius: 20
                radius: [15]
                border_radius: "12dp"
                size: app.size_x/4, "70dp"
                size_hint_x: .5
                pos_hint: {"center_x": .5, "center_y": .83}
                on_release:
                    manager.current = "other_shops"
                    app.count = app.count + 1
                    app.summon()
                FloatLayout:
                    MDIconButton:
                        icon: "shopping"
                        pos_hint: {"center_x": .5, "center_y": .75}
                        on_release:
                            manager.current = "other_shops"
                            app.summon()
                    MDLabel:
                        text:"other shops"
                        halign:"center"
                        bold:True
                        font_name:"bgimages/fonts/GillSans/GillSans Condensed Bold.otf"
                        pos_hint: {"center_x": .5, "center_y": .3}
            ScrollView:
                id: scroll
                MDGridLayout:
                    cols: 2
                    adaptive_height: True
                    padding: dp(10), dp(4)
                    spacing: dp(30)
                    id:front_shop

    MDScreen:
        name:"selling"
        id:sell
        on_enter:
            app.permision_req()
        FitImage:
            source:"bgimages/icons/yummy-plain.jpg"
        FloatLayout:
            MDIconButton:
                pos_hint:{"center_x": .05, "center_y": .05}
                icon:"account"
                on_release:
                    app.count = app.count - 1
                    print("screen>>", app.count)
                    app.order_spinner1()
            MDIconButton:
                icon:"arrow-left-circle-outline"
                pos_hint:{"center_x":.04, "center_y":.97}
                on_release:
                    manager.current = "one"
            MDCard
                id:image_carry
                md_bg_color: self.theme_cls.primary_color
                size_hint: None, None
                border_radius: 20
                radius: [15]
                border_radius: "12dp"
                size: app.size_x - 100, "180dp"
                elevation:3
                pos_hint: {"center_x": .5, "center_y": .8}
                Shop_image:
                    source:app.admin_product_url
            MDSpinner:
                size_hint: None, None
                size: dp(46), dp(46)
                pos_hint: {'center_x': .5, 'center_y': .5}
                active: app.spin_active
            MDCard:
                id:price_carry
                md_bg_color: self.theme_cls.primary_color
                size_hint: None, None
                border_radius: 20
                radius: [15]
                border_radius: "12dp"
                size: app.size_x/3, "80dp"
                elevation:3
                pos_hint: {"center_x": .5, "center_y": .55}
                MDLabel:
                    text:"Price:"
                    halign:"center"
                    bold:True
                    font_name:"bgimages/fonts/GillSans/GillSans Condensed Bold.otf"
                    pos_hint: {"center_x": .35, "center_y": .5}
                MDLabel:
                    text:app.admin_product_price
                    halign:"center"
                    bold:True
                    font_name:"bgimages/fonts/GillSans/GillSans Condensed Bold.otf"
                    pos_hint: {"center_x": .4, "center_y": .5}
                    elevation: 3
            NumberOnly:
                id:quantity
                size_hint: .4, None
                pos_hint: {"center_x": .5, "center_y": .4}
                height: "30dp"
                hint_text:"idadi"
                color_mode:"custom"
                #theme_text_color: "ContrastParentBackground"
                fill_color: 1, 1, 0, 1
                on_text:
                    app.callculator_rim(quantity.text, app.admin_product_price)
            MDLabel:
                text:"total price" +" "+ app.calculator + "/tsh"
                halign:"center"
                bold:True
                font_name:"bgimages/fonts/GillSans/GillSans Condensed Bold.otf"
                pos_hint: {'center_x': .5, 'center_y': .33}
            MDDropDownItem:
                id:drop_item_one
                md_bg_color:self.theme_cls.primary_color
                pos_hint: {'center_x': .5, 'center_y': .25}
                text: app.menu_text
                on_release:
                    app.callback(drop_item_one)
            MDRoundFlatButton:
                text: "Order"
                pos_hint: {'center_x': .5, 'center_y': .13}
                on_release:
                    app.product_name = app.admin_product_name
                    app.quantity = quantity.text
                    app.phone_number_dialog()

    MDScreen:
        name:"selling_other"
        on_enter:
            app.permision_req()
        FitImage:
            source:"bgimages/icons/yummy-plain.jpg"
        FloatLayout:
            MDSpinner:
                size_hint: None, None
                size: dp(46), dp(46)
                pos_hint: {'center_x': .5, 'center_y': .5}
                active: app.spin_active
            MDIconButton:
                icon:"arrow-left-circle-outline"
                pos_hint:{"center_x":.06, "center_y":.97}
                on_release:
                    manager.current = "other_shops"
            MDCard
                id:image_carry
                # md_bg_color: self.theme_cls.primary_color
                size_hint: None, None
                border_radius: 20
                radius: [15]
                border_radius: "12dp"
                size: app.size_x - 100, "200dp"
                elevation:3
                on_release:
                    app.change_picture()
                pos_hint: {"center_x": .5, "center_y": .8}
                Shop_image:
                    source:app.admin_product_url
            MDIconButton:
                icon:"arrow-right-drop-circle"
                pos_hint:{"center_x":.5, "center_y":.62}
                on_release:
                    app.image_viewer()
                    app.change_picture()
            MDLabel:
                text:"Description"
                halign:"center"
                bold:True
                font_style:"H5"
                size_hint:None, None
                size:app.size_x/1.5, "95dp"
                theme_text_color: "Custom"
                text_color:78/255, 82/255, 84/255, 1
                font_name:"bgimages/fonts/GillSans/GillSans Condensed Bold.otf"
                pos_hint: {"center_x": .5, "center_y": .55}
            MDCard:
                id:price_carry
                md_bg_color: self.theme_cls.primary_color
                size_hint: None, None
                border_radius: 20
                radius: [15]
                border_radius: "12dp"
                size: app.size_x/1.5, "95dp"
                elevation:3
                pos_hint: {"center_x": .5, "center_y": .45}
                MDLabel:
                    text:app.admin_product_description
                    halign:"center"
                    bold:True
                    theme_text_color:"Custom"
                    text_color:1, 1, 1, 1
                    font_name:"bgimages/fonts/GillSans/GillSans Condensed Bold.otf"
                    pos_hint: {"center_x": .4, "center_y": .5}
                    elevation: 3
            MDLabel:
                text:"Price"+" " + app.admin_product_price + "/tsh"
                halign:"center"
                bold:True
                font_style:"Caption"
                size_hint:None, None
                size:app.size_x/1.5, "95dp"
                theme_text_color: "Custom"
                text_color:78/255, 82/255, 84/255, 1
                font_name:"bgimages/fonts/GillSans/GillSans Condensed Bold.otf"
                pos_hint: {"center_x": .5, "center_y": .35}
            NumberOnly:
                id:quantity_other
                size_hint: .4, None
                pos_hint: {"center_x": .5, "center_y": .3}
                height: "30dp"
                hint_text:"idadi"
                color_mode:"custom"
                #theme_text_color: "ContrastParentBackground"
                fill_color: 1, 1, 0, 1
                on_text:
                    app.callculator_rim(quantity_other.text, app.admin_product_price)
            MDLabel:
                text:"total price" +" "+ app.calculator + "/tsh"
                halign:"center"
                bold:True
                theme_text_color: "Custom"
                text_color:78/255, 82/255, 84/255, 1
                font_name:"bgimages/fonts/GillSans/GillSans Condensed Bold.otf"
                pos_hint: {'center_x': .5, 'center_y': .25}
            MDDropDownItem:
                id:drop_item_one
                md_bg_color:self.theme_cls.primary_color
                pos_hint: {'center_x': .5, 'center_y': .19}
                text: app.menu_text
                on_release:
                    app.callback(drop_item_one)
            MDRoundFlatButton:
                text: "Order"
                pos_hint: {'center_x': .5, 'center_y': .1}
                on_release:
                    app.product_name = app.admin_product_name
                    app.quantity = quantity_other.text
                    app.phone_number_dialog()

    MDScreen:
        name: "other_shops"
        on_enter:
            app.other_shop_faster()
        FitImage:
            source:"bgimages/other.jpg"
        MDBoxLayout:
            orientation:"vertical"
            MDIconButton:
                icon:"arrow-left-circle-outline"
                pos_hint:{"center_x":.05, "center_y":.9}
                on_release:
                    manager.current = "one"
            ScrollView:
                id: scroll
                MDGridLayout:
                    cols: 2
                    adaptive_height: True
                    padding: dp(12), dp(4)
                    spacing: dp(10)
                    id:other_shop


        MDLabel:
            text:app.loading
            halign:"center"
            bold:True
            theme_text_color: "Custom"
            font_style:"H6"
            font_name:"bgimages/fonts/GillSans/GillSans Condensed Bold.otf"
            theme_text_color: "Custom"
            text_color:78/255, 82/255, 84/255, 1
            size_hint:None, None
            pos_hint: {'center_x': .5, 'center_y': .4}

        MDSpinner:
            size_hint: None, None
            size: dp(46), dp(46)
            pos_hint: {'center_x': .5, 'center_y': .5}
            active: app.spin_active

    MDScreen:
        name:"login"
        md_bg_color:60/255, 66/255, 75/255, 1
        on_enter:
            app.count = app.count + 1
        on_leave:
            app.count = app.count - 1
        FitImage:
            source:"bgimages/icons/yummy-plain.jpg"
        FloatLayout:
            orientation:"vertical"
            MDIconButton:
                icon:"arrow-left-circle-outline"
                pos_hint:{"center_x":.05, "center_y":.9}
                on_release:
                    manager.current = "one"
            NumberOnlyRound:
                id:user_login_phone
                pos_hint:{"center_x":.5, "center_y":.6}
                size_hint: .8,.054
                hint_text:"Phone:"
                line_color :app.theme_cls.primary_color
                normal_color: 0.5,0.5,0.5,0.5
                icon_left:"phone"
                color_active:1, 1, 1, 1
                icon_left_color:app.theme_cls.primary_color
            MDTextFieldRound:
                id:user_login_password
                pos_hint:{"center_x":.5, "center_y":.48}
                size_hint: .8,.054
                hint_text:"password:"
                password:True
                line_color:app.theme_cls.primary_color
                normal_color: 0.5,0.5,0.5,0.5
                icon_left:"lock"
                icon_left_color:app.theme_cls.primary_color
                color_active:1, 1, 1, 1
            MDSpinner:
                size_hint: None, None
                size: dp(46), dp(46)
                pos_hint: {'center_x': .5, 'center_y': .5}
                active: app.spin_active
            MDFillRoundFlatButton:
                text:"Login"
                size_hint: .7, .07
                pos_hint:{"center_x":.5, "center_y":.38}
                text_color:1, 1, 1, 1
                on_release:
                    app.validate_user(user_login_phone.text, user_login_password.text)
    MDScreen:
        name:"admin_main"
        md_bg_color:60/255, 66/255, 75/255, 1
        on_enter:
            app.resize_bottom_tabs()
            app.add_order_admin()
        MDBottomNavigation:
            id:bottom_nav
            panel_color: .2, .2, .2, 1
            text_color_active: 1, 0, 1, 1
            MDBottomNavigationItem:
                name: 'orders'
                text: 'Orders'
                icon: 'reorder-horizontal'
                MDBoxLayout:
                    orientation:"vertical"
                    MDIconButton:
                        icon:"arrow-left"
                        pos_hint:{"center_x":.06, "center_y":.9}
                        on_release:
                            manager.current = "one"
                    ScrollView:
                        id: scroll
                        MDGridLayout:
                            cols: 1
                            adaptive_height: True
                            padding: dp(4), dp(4)
                            spacing: dp(10)
                            id:food_cat
                MDCard:
                    orientation:"vertical"
                    spacing: "1dp"
                    id:order
                    md_bg_color:245 / 255, 0 / 255, 72 / 255, 1
                    size_hint: None, None
                    border_radius: 20
                    radius: [15]
                    border_radius: "12dp"
                    size: 155, "70dp"
                    pos_hint: {"center_x": .5, "center_y": .9}
                    on_release:
                        app.refresh()
                    MDLabel:
                        text:"O r d e r s"
                        halign:"center"
                        font_name:"bgimages/fonts/GillSans/GillSans Condensed Bold.otf"
                        pos_hint: {"center_x": .5, "center_y": .5}
                        bold:True
                    MDLabel:
                        halign:"center"
                        font_name:"bgimages/fonts/GillSans/GillSans Condensed Bold.otf"
                        text:"(" + app.order_number + ")"
                        bold:True
                MDSpinner:
                    size_hint: None, None
                    size: dp(46), dp(46)
                    pos_hint: {'center_x': .5, 'center_y': .5}
                    active: app.spin_active


<phone_dialog>
    NumberOnlyField:
        id:phone
        hint_text:"Phone number:"
        size_hint: .8, None
        pos_hint_x: .2
        color_mode:"accent"
        text_color: 0, 0, 0, 0
        on_text:
            app.phone_number = phone.text

<last_dialog>
    orientation:"vertical"
    spacing: "12dp"
    size_hint_y: None
    height: "120dp"
    MDLabel:
        text:"[color=FF7646]Phone number:[/color]"+" "+app.phone_number
        theme_text_color:"Custom"
        font_name:"bgimages/fonts/GillSans/GillSans Condensed Bold.otf"
        text_color:	121/255, 174/255, 141/255, 1
        markup: True
    MDLabel:
        text:"[color=FF7646]Location:[/color]"+" "+app.location
        theme_text_color:"Custom"
        font_name:"bgimages/fonts/GillSans/GillSans Condensed Bold.otf"
        text_color:	121/255, 174/255, 141/255, 1
        markup: True
    MDLabel:
        text:"[color=FF7646]Product name:[/color]"+" "+app.product_name
        theme_text_color:"Custom"
        font_name:"bgimages/fonts/GillSans/GillSans Condensed Bold.otf"
        text_color:	121/255, 174/255, 141/255, 1
        markup: True
    MDLabel:
        text:"[color=FF7646]Quantity:[/color]"+" "+app.quantity
        theme_text_color:"Custom"
        font_name:"bgimages/fonts/GillSans/GillSans Condensed Bold.otf"
        text_color:	121/255, 174/255, 141/255, 1
        markup: True
    MDLabel:
        text:"[color=FF7646]Total amount:[/color]"+" "+str(app.total_amount)
        theme_text_color:"Custom"
        font_name:"bgimages/fonts/GillSans/GillSans Condensed Bold.otf"
        text_color:	121/255, 174/255, 141/255, 1
        markup: True


<picture_dialog>
    source:app.admin_product_url
    size: dp(400), dp(450)


<category>:
    orientation: "vertical"
    padding: "8dp"
    spacing: "10dp"
    border_radius: 20
    border_color: 1
    radius: [15]
    size_hint: None, None
    size: app.size_x - 15, app.size_y/2
